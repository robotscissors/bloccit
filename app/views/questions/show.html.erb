<h1><%= @question.title %></h1>
<div class="row">
  <div class="col-md-8">
    <p><%= @question.body %></p>
    <% if @question.resolved %>
      <span class="btn btn-success"><i class="glyphicon glyphicon-ok"></i> Resolved</span>
    <% else %>
    <span class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i> Unresolved</span>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_question_path(@question), class: "btn btn-success" %>
    <%= link_to "Delete Question", @question, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this question?'} %>
  </div>
</div>
