<h1>Create a New Advertisment</h1>
<div class="col-md-8">
  <%= form_for @advertisment do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter the Ad title" %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter Ad body" %>
       </div>
       <div class="form-group">
         <%= f.label :price %>
          <%= f.number_field :price, class: 'form-control', placeholder: "$$" %>
        </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
</div>
