<h1>Sign up confirmation</h1>
<h2>Are you sure these values are correct?</h2>

<h5>Your name: <%= @user.name %></h5>
<h5>Your email: <%= @user.email %></h5>

<div class="row">
  <div class="col-md-1">
    <%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success' %>
  </div>
  <div class="col-md-1">
    <%= button_to "No",  {controller: "users", action: "new"}, :method => :get, class: 'btn btn-basic' %>
  </div>
</div>
