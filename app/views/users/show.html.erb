<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />

       <% avatar_url = @user.avatar_url(128) %>
       <% if avatar_url %>
         <div class="media-left">

           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <% if (@user.has_posts? && @user.has_comments?) %>
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>
         </small>
         <% else %>
            <h2 class="media-heading"><%= "#{@user.name} has not submitted any posts or comments yet." %></h2>
         <% end %>
         <h2>
       </div>
     </div>
   </div>
 </div>


 <h2>Posts</h2>
 <%= render @user.posts %>

 <h2>Comments</h2>
 <%= render @user.comments %>


<% if @favorited_posts %>
   <h2>Posts Favorited</h2>
   <% @favorited_posts.each do |t| %>
      <%= "Author ID: ?? - POST ID: #{t.post_id}"%><br />
   <% end %>
<% end %>
